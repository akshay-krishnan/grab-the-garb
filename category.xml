<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ranja.myapplication.MainActivity">


    <Button
        android:id="@+id/govt"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="193dp"
        android:layout_marginBottom="30dp"
        android:text="Report Garbage not picked!!!"
        android:onClick="garbage"/>

    <Button

        android:id="@+id/picked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/govt"
        android:layout_below="@id/govt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:onClick="cleaned"
        android:text="Picked the grab" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/picked"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:onClick="scrap"
        android:text="Sell Scrap" />


</RelativeLayout>